{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "New idea: ${ahaIdeaId}"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "${idea.created_by_user.avatar_url}",
                            "size": "Small"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${idea.created_by_user.name}",
                            "wrap": true,
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${idea.created_by_user.email}\n",
                            "wrap": true,
                            "size": "Small"
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "Created {{DATE(${idea.created_at},SHORT)}}",
                            "isSubtle": true,
                            "wrap": true,
                            "size": "Small"
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "${idea.name}",
            "wrap": true,
            "size": "Medium",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "${idea.description.body_nohtml}",
            "wrap": true
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Status",
                    "value": "${idea.workflow_status.name}"
                },
                {
                    "title": "Visibility",
                    "value": "${idea.visibility}"
                },
                {
                    "title": "Product",
                    "value": "${idea.product.name}"
                }
            ],
            "separator": true
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "View in Aha!",
            "url": "${idea.url}"
        },
        {
            "type": "Action.ShowCard",
            "title": "Edit details",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "id": "idea_name",
                        "type": "Input.Text",
                        "placeholder": "Enter the name of the idea",
                        "label": "Name",
			"value": "${idea.name}"
                    },
                    {
                        "id": "idea_description",
                        "type": "Input.Text",
                        "placeholder": "Enter a detailed description of the idea",
                        "isMultiline": true,
                        "label": "Description",
			"value": "${idea.description.body_nohtml}"
                    },
                    {
                        "id": "idea_status",
                        "type": "Input.ChoiceSet",
			"value": "${idea.workflow_status.name}",
                        "choices": [
                            {
				"$data": "${workflows}",
                                "title": "${name}",
                                "value": "${id}"
                            }
                        ],
                        "placeholder": "Select status",
                        "label": "Status"
                    },
                    {
                        "id": "idea_category",
                        "type": "Input.ChoiceSet",
			"value": "${selectedCategory}",
                        "choices": [
                            {
                                "$data": "${categories}",
                                "title": "${name}",
                                "value": "${id}"
                            }
                        ],
                        "placeholder": "Select a product category",
                        "label": "Category"
                    }
                ],
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Save"
                    }
                ],
                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
            }
        },
        {
            "type": "Action.ShowCard",
            "title": "Add comment",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "id": "comment_text",
                        "type": "Input.Text",
                        "placeholder": "Enter your comment",
                        "isMultiline": true,
                        "label": "Comment text"
                    }
                ],
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Post public comment"
                    }
                ]
            }
        }
    ]
}
